<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/list_view_shadow"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:hint="净化空气  呵护家人"
                android:singleLine="true" />

            <Button
                android:id="@+id/week"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/auto_complete_text"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="-4dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_shadow_week"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="本周精选"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/everyday"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/auto_complete_text"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/week"
                android:background="@drawable/button_shadow_everyday"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="每日惊喜"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/todaylow"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/week"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="-4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_shadow_todayhot"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="今日最便宜"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/todayhot"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/week"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/todaylow"
                android:background="@drawable/button_shadow_todaylow"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="今日最热门"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/store_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/todaylow"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:text="附近商家"
                android:textColor="@android:color/black"
                android:textSize="24dp" />

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/store_title"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"></ListView>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
