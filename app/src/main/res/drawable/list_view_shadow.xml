<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:endColor="#AEACAB" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
            <solid android:color="#FFFFFF" />

            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>